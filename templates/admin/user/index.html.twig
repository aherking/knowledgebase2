{% extends 'admin/layout.html.twig' %}

{% block content %}
    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Eintr√§ge</div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Benutzername</th>
                        <th>Rolle</th>
                        <th>Letzter Login</th>
                        <th>Aktionen</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.username }}</td>
                            <td>{{ user.roles|json_encode()|replace({'"ROLE_ADMIN"':'Admin', "ROLE_USER":'User'}) }}</td>
                            <td>{{ user.lastlogin ? user.lastlogin|date('d.m.Y') : ''  }}</td>
                            <td>                        <a href=""> bearbeiten</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">Seite</div>
    </div>

{% endblock %}