{% extends 'start/index.html.twig' %}
{%  block content %}

    <div class="container">
        <h1 class="my-4">
            {{ tag.name }} <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><a href="{{ path('tag_edit', {'id': tag.id}) }}"><i class="fas fa-edit" title="bearbeiten"></i></a>
            <small>{% if tag.main %}Main Tag{% else %}Child Tag{% endif %}</small>
        </h1>
        <h2>
            Beschreibung
        </h2>
        <p>
            {{ tag.description }}
        </p>
        <h2 class="my-4">Eintr√§ge</h2>
        <div class="row">
        {% for entry in tag.getEntries() %}
            <div class="col-lg-4 col-sm-6 mb-4">
                <div class="card h-100">
                    <a href="#"><img class="card-img-top" src="http://placehold.it/700x400" alt=""></a>
                    <div class="card-body">
                    <h4 class="card-title">
                    <a href="{{ path('entry_show', {'id': entry.id}) }}">{{ entry.name }} </a>
                    </h4>
                        <p class="card-text">{{ tag.description }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
            <!-- /.row -->


        </div>
    </div>
    </div>
{%  endblock %}