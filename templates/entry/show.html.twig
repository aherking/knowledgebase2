{% extends 'base.html.twig' %}

{% block title %}Entry{% endblock %}

{% block body %}
    <h1>Entry</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entry.id }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ entry.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entry.name }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ entry.created ? entry.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Changed</th>
                <td>{{ entry.changed ? entry.changed|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Workflow</th>
                <td>{{ entry.workflow }}</td>
            </tr>
            <tr>
                <th>Error</th>
                <td>{{ entry.error }}</td>
            </tr>
            <tr>
                <th>Solution</th>
                <td>{{ entry.solution }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('entry_index') }}">back to list</a>

    <a href="{{ path('entry_edit', {'id': entry.id}) }}">edit</a>

    {{ include('entry/_delete_form.html.twig') }}
{% endblock %}
