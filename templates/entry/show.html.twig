{% extends 'start/index.html.twig' %}
{%  block content %}
    <div class="container">
        <h1 class="my-4">
            {{ entry.name }} <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><a href="{{ path('entry_edit', {'id': entry.id}) }}"><i class="fas fa-edit" title="bearbeiten"></i></a>
        </h1>
        <p>
            <i class="fas fa-user"></i> <a href="#">{{ entry.user }}</a>
            <i class="fas fa-calendar-alt" title="erstellt"></i> <a title="erstellt"> {{ entry.created ? entry.created|date('Y-m-d') : '' }}</a>
            <i class="fas fa-calendar-alt" title="bearbeitet"></i> <a title="bearbeitet"> {{ entry.changed ? entry.changed|date('Y-m-d') : '' }}</a>
            <i class="fas fa-comment-alt"></i><a href="#"><i class="fa fa-comments-o"></i> 4 Comments </a>
        </p>

        <h2>
            Workflow
            <small><i class="fas fa-plus-square" title="erweitern" type="button" data-toggle="collapse" data-target="#workflowcollapse" aria-expanded="false" aria-controls="workflowcollapse"></i></small>
        </h2>
        <p class="collapse show" id="workflowcollapse">
            {{ entry.workflow }}
        </p>
        <h2>
            Error-Message
            <small><i class="fas fa-plus-square" title="erweitern" type="button" data-toggle="collapse" data-target="#errorcollapse" aria-expanded="false" aria-controls="errorcollapse"></i></small>
        </h2>
        <p class="collapse" id="errorcollapse">
            {{ entry.error }}
        </p>
        <h2>
            LÃ¶sung
            <small><i class="fas fa-plus-square" title="erweitern" type="button" data-toggle="collapse" data-target="#solutioncollapse" aria-expanded="false" aria-controls="solutioncollapse"></i></small>
        </h2>
        <p class="collapse show" id="solutioncollapse">
            {{ entry.solution }}
        </p>
        <p>
        <h4>Tags</h4>
        <div>
            <h5>Main</h5>
            {% for tag in entry.getTagId() %}
                {% if tag.main %}<a href="{{ path('tag_show', {'id': tag.id}) }}"><i class="fas fa-tags" title="Tag"></i> {{ tag.name }}</a> {% endif %}
            {% endfor %}
        </div>
        <div>
            <h5>Weitere</h5>
            {% for tag in entry.getTagId() %}
                {% if tag.main == 0 %}<a href="{{ path('tag_show', {'id': tag.id}) }}"><i class="fas fa-tags" title="Tag"></i> {{ tag.name }} ({{ tag.modus }})</a> {% endif %}
            {% endfor %}
        </div>
        </p>
    </div>
{%  endblock %}