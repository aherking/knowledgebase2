{% extends 'start/index.html.twig' %}

{%  block body %}
    {% include '_includes/minimal.html.twig' %}

    {%  block content %}
        <form class="container"  method="POST">
            <h1 class="my-4">Eintrag erstellen</h1>
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
            <div class="form-group">
                <h3>Titel</h3>
                <hr>
                <input type="text" class="form-control" name="entry[name]">
            </div>
            <div class="form-group shadow-textarea" aria-rowcount="10">
                <div class="form-group shadow-textarea" aria-rowcount="10">
                    <h3>Workflow</h3>
                    <hr>
                    <textarea id="editor" name="entry[workflow]" value=""></textarea>

                </div>
                <div class="form-group">
                    <h3>Fehlermeldung</h3>
                    <hr>
                    <textarea id="editor" name="entry[error]" value=""></textarea>

                </div>
                <div class="form-group">
                    <h3>Lösung</h3>
                    <hr>
                    <textarea id="editor" name="entry[solution]" value=""></textarea>

                </div>
                <div>
                    <h3>Wähle einen Haupt-Tag</h3>
                    <hr>
                    <select class="custom-select" name="entry[tagID][]">
                        {% for tag in tags %}
                            {% if tag.main %}
                                    <option value="{{ tag.id }}"> {{ tag.name }}</option>
                            {% endif %}
                        {% endfor %}
                    </select>
                </div>
                <br />
                <div>
                    <h3>Wähle weitere Tags</h3>
                    <hr>
                    <select class="custom-select" name="entry[tagID][]" multiple>
                        {% for tag in tags %}
                            {% if tag.main == 0 %}
                                    <option value="{{ tag.id }}"> {{ tag.name }}</option>
                       {% endif %}
                        {% endfor %}
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Speichern</button>
        </form>
    {% endblock %}
{%  endblock %}