{% extends 'start/index.html.twig' %}

{% block content %}
    <!-- https://www.bootdey.com/snippets/view/bs4-Profile-Settings-page -->
    <div class="container p-0">
        <br />
        <div class="row">
            <div class="col-md-5 col-xl-4">

                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Profil-Einstellungen</h5>
                    </div>

                    <div class="list-group list-group-flush" role="tablist">
                        <a class="list-group-item list-group-item-action active" data-toggle="list" href="#password" role="tab">
                            Passwort ändern
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-7 col-xl-8">
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="password" role="tabpanel">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Password</h5>
                                <div id ="errorpw" class="alert alert-danger" style="display:none; ">Ein Fehler ist aufgetreten</div>
                                <div id ="successpw" class="alert alert-success" style="display:none; ">Passwort wurde erfolgreich geändert</div>

                                <form>
                                    <div class="form-group">
                                        <label for="oldPW">Aktuelles Passwort</label>
                                        <input type="password" class="form-control" id="oldPW" name="oldPW">
                                    </div>
                                    <div class="form-group">
                                        <label for="newPW">Neues Passwort</label>
                                        <input type="password" class="form-control" id="newPW" name="newPW">
                                    </div>
                                    <div class="form-group">
                                        <label for="newPWConfirm">Neues Passwort bestätigen</label>
                                        <input type="password" class="form-control" id="newPWConfirm" name="newPWConfirm">
                                    </div>
                                    <button type="button" class="btn btn-primary" id="password-submit">Save changes</button>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}